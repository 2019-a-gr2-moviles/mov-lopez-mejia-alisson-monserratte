<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Parceable"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="254dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_adapter" android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"/>
    <Button
            android:text="Adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_adapter"
            app:layout_constraintBaseline_toBaselineOf="@+id/button" android:layout_marginEnd="86dp"
            android:layout_marginRight="86dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="78dp"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>

</android.support.constraint.ConstraintLayout>