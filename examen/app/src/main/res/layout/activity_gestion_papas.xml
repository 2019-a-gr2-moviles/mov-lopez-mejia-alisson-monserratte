<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gestionPapas">

    <Button
            android:text="Gestionar Tiendas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_gestion_tiendas"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="188dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Crear tienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_crear_tienda"
            app:layout_constraintStart_toStartOf="@+id/btn_gestion_tiendas" android:layout_marginLeft="11dp"
            android:layout_marginTop="81dp" android:layout_marginStart="11dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_gestion_tiendas"/>
</android.support.constraint.ConstraintLayout>