<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".editar_Productos_hijo">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_numProducto2" android:hint="Numero Producto" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_descripcion2" android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_descripcion2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/btn_nombre2"
            android:hint="Nombre producto" app:layout_constraintStart_toStartOf="@+id/txt_numProducto2"
            android:layout_marginTop="17dp" app:layout_constraintTop_toBottomOf="@+id/txt_numProducto2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Descripcion"
            android:ems="10"
            android:id="@+id/txt_descripcion2" app:layout_constraintStart_toStartOf="@+id/txt_precio2"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/btn_nombre2"
            app:layout_constraintEnd_toEndOf="@+id/txt_precio2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Precio"
            android:ems="10"
            android:id="@+id/txt_precio2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="35dp"
            android:layout_marginLeft="42dp" android:layout_marginStart="42dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcion2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Anios garantia"
            android:ems="10"
            android:id="@+id/txt_aniosGarantia2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_precio2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Tienda ID"
            android:ems="10"
            android:id="@+id/txt_tiendaID2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_aniosGarantia2"/>
    <Button
            android:text="ACTUALIZAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_actualizar_hijos2"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/txt_tiendaID2"
            android:layout_marginEnd="51dp" android:layout_marginRight="51dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="ELIMINAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_eliminar_hijos"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="41dp"
            android:layout_marginLeft="49dp" android:layout_marginStart="49dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_tiendaID2"/>
</android.support.constraint.ConstraintLayout>