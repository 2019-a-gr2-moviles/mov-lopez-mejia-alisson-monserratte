<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearHijosPRodutcos">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_numProducto" android:hint="Numero Producto" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_descripcion" android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_descripcion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/btn_nombre"
            android:hint="Nombre producto" app:layout_constraintStart_toStartOf="@+id/txt_numProducto"
            android:layout_marginTop="17dp" app:layout_constraintTop_toBottomOf="@+id/txt_numProducto"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_descripcion" android:hint="Descripcion"
            app:layout_constraintStart_toStartOf="@+id/txt_precio" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_nombre" app:layout_constraintEnd_toEndOf="@+id/txt_precio"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_precio"
            android:hint="Precio" app:layout_constraintStart_toStartOf="@+id/txt_fechaLanzamiento_Producto"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/txt_descripcion"
            app:layout_constraintEnd_toEndOf="@+id/txt_fechaLanzamiento_Producto"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_fechaLanzamiento_Producto" android:hint="Fecha lanzamiento"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="35dp"
            android:layout_marginLeft="42dp" android:layout_marginStart="42dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_precio"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_aniosGarantia" android:hint="Anios garantia"
            app:layout_constraintStart_toStartOf="@+id/txt_fechaLanzamiento_Producto" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_fechaLanzamiento_Producto"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_tiendaID"
            android:hint="Tienda ID" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="39dp"
            android:layout_marginLeft="41dp" android:layout_marginStart="41dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_aniosGarantia"/>
    <Button
            android:text="GUARDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_guardar_hijos" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_tiendaID" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="@+id/txt_tiendaID"/>
</android.support.constraint.ConstraintLayout>