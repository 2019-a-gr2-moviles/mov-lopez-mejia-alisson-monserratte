<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".crearPapas">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_tiendaDireccion" app:layout_constraintStart_toStartOf="@+id/txt_fechaLanzamiento"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_tiendaNombre" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_fechaLanzamiento" android:hint="Direccion tienda"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_tiendaNombre" android:layout_marginTop="43dp" android:layout_marginBottom="47dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_tiendaDireccion"
            app:layout_constraintBottom_toTopOf="@+id/txt_tiendaDireccion" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_tiendaDireccion" android:hint="Nombre Tienda"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_fechaLanzamiento" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp" android:layout_marginStart="58dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_tiendaDireccion" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_RUC" android:hint="Fecha Lanzamiento"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_RUC"
            app:layout_constraintStart_toStartOf="@+id/txt_fechaLanzamiento" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintTop_toBottomOf="@+id/txt_fechaLanzamiento"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/switchSioNo"
            android:hint="RUC"/>
    <Button
            android:text="GUARDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_guardar"
            app:layout_constraintTop_toBottomOf="@+id/switchSioNo" android:layout_marginBottom="251dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Switch
            android:text="Es matriz ? "
            android:layout_width="146dp"
            android:layout_height="0dp"
            android:id="@+id/switchSioNo"
            app:layout_constraintTop_toBottomOf="@+id/txt_RUC" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_guardar" app:layout_constraintBottom_toTopOf="@+id/btn_guardar"
            android:layout_marginEnd="36dp" android:layout_marginRight="36dp"/>
</android.support.constraint.ConstraintLayout>