<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".crearPapas">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Direccion tienda"
            android:ems="10"
            tools:layout_editor_absoluteY="135dp" tools:layout_editor_absoluteX="59dp"
            android:id="@+id/txt_tiendaDireccion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nombre Tienda"
            android:ems="10"
            tools:layout_editor_absoluteY="43dp" tools:layout_editor_absoluteX="59dp"
            android:id="@+id/txt_tiendaNombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Fecha Lanzamiento"
            android:ems="10"
            tools:layout_editor_absoluteY="207dp" tools:layout_editor_absoluteX="58dp"
            android:id="@+id/txt_fechaLanzamiento"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="RUC"
            android:ems="10"
            tools:layout_editor_absoluteY="277dp" tools:layout_editor_absoluteX="49dp" android:id="@+id/txt_RUC"/>
    <RadioButton
            android:text="Si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="372dp"
            tools:layout_editor_absoluteX="49dp" android:id="@+id/radioBtn_si"/>
    <TextView
            android:text="Es matriz ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="334dp"
            tools:layout_editor_absoluteX="49dp" android:id="@+id/txtViewEsmatriz"/>
    <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="372dp"
            tools:layout_editor_absoluteX="152dp" android:id="@+id/radioBtnNo"/>
    <Button
            android:text="GUARDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="432dp"
            tools:layout_editor_absoluteX="152dp" android:id="@+id/btn_guardar"/>
</android.support.constraint.ConstraintLayout>